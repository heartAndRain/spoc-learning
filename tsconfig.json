{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "built",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "built"
    ]
}